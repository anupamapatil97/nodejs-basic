<%- include('../includes/head.ejs') %>
    <link href="/css/product.css" rel="stylesheet"/>
    <link href="/css/forms.css" rel="stylesheet"/>

</head>
<body>
    <%- include('../includes/navigate.ejs') %>
    <main>
        <form class="product-form" action="/admin/<% if(editing) { %>edit-product<% } else { %>product<%}%>" method="POST">
            <div class="form-control">
                <label class="title">Title</label>
                <input type="text" name="title" id="title" value="<% if(editing) { %><%= product.title %> <%}%>"/>
            </div>
            
            <div class="form-control">
                <label class="imageUrl">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if(editing) { %><%= product.imageUrl %> <%}%>"/>
            </div>

            <div class="form-control">
                <label class="price">Price</label>
                <input type="text" name="price" id="price" value="<% if(editing) { %><%= product.price %> <% } %>"/>
            </div>

            <div class="form-control">
                <label class="description">Description</label>
                <textarea name="description" id="description" cols="40" rows="5"><% if(editing) { %><%= product.description %> <%}%></textarea>
            </div>
            <% if(editing) { %>
                <input type="hidden" value="<%=product.id%>" name="productId"/>
            <% } %>
            
            <button type="submit"><% if(editing) {%> Update Product <% } else { %>Add Product<% } %></button></form>
    </main>
<%- include('../includes/end.ejs') %>